<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="debug" />
		<!-- 设置监视器输出方式 -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss} %-5p (%F:%L) [%M()] %m%n" />
		</layout>
		<!--限制输出级别 -->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>

	<category name="org.springframework">
		<priority value="info" />
	</category>

	<category name="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<priority value="info" />
	</category>

	<category name="com.feilong">
		<priority value="debug" />
	</category>

	<category name="com.feilong.tools.security">
		<priority value="debug" />
	</category>

	<logger name="org.apache.commons.digester.Digester">
		<level value="warn"></level>
	</logger>
	<logger name="org.apache.commons.beanutils.ConvertUtilsBean">
		<level value="warn"></level>
	</logger>
	<logger name="org.apache.commons.beanutils.converters">
		<level value="warn"></level>
	</logger>
	<logger name="org.apache.commons.beanutils.converters.AbstractConverter">
		<level value="warn"></level>
	</logger>

	<!--
		priority已经由level代替 
		category已经由logger代替。 
	-->
	<category name="org.apache.commons.beanutils">
		<priority value="info" />
	</category>

	<!-- 设置接收所有输出的通道 -->
	<root>
		<level value="debug" />
		<appender-ref ref="stdout" />
	</root>
</log4j:configuration>